{
  "name": "node-command-alias",
  "version": "2.1.0-dev",
  "description": "Node cross platform command alias",
  "keywords": [
    "alias",
    "cli",
    "cmd",
    "command",
    "shell",
    "terminal"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "nca": "./dist/index.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npx --verbose tsc",
    "test": "mocha --require ts-node/register --require source-map-support/register --recursive test/**/*.test.ts",
    "coverage": "node .github/script/generate-coverage.mjs",
    "doc": "node .github/script/generate-typedoc.mjs",
    "lint": "eslint \"src/**\"",
    "preinstall": "node script/setup.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gturi/nca.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gturi/nca/issues"
  },
  "homepage": "https://github.com/gturi/nca#readme",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "shelljs": "^0.8.5",
    "walkdir": "^0.4.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.5",
    "@types/jest": "^29.5.1",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/shelljs": "^0.8.11",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "chai": "^4.3.7",
    "coveralls": "^3.1.1",
    "eslint": "^8.24.0",
    "eslint-plugin-import": "^2.26.0",
    "mocha": "^10.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.6",
    "typescript": "^5.0.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
